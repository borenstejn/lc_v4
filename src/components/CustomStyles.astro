---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Palette Laure Cohen - Mode Clair */
    --aw-color-primary: rgb(232 180 160);     /* Rose saumon doux - couleur principale du site */
    --aw-color-secondary: rgb(139 116 100);   /* Brun taupe pour les éléments secondaires */
    --aw-color-accent: rgb(212 165 116);      /* Orange corail pour les CTAs et highlights */

    --aw-color-text-heading: rgb(45 35 30);   /* Brun très foncé pour les titres */
    --aw-color-text-default: rgb(60 50 45);   /* Brun foncé pour le texte principal */
    --aw-color-text-muted: rgb(60 50 45 / 70%); /* Texte atténué avec transparence */
    --aw-color-bg-page: rgb(252 249 246);     /* Beige très clair, chaleureux */

    --aw-color-bg-page-dark: rgb(25 20 18);   /* Brun très foncé pour le mode sombre */

    ::selection {
      background-color: rgb(212 165 116 / 25%); /* Sélection avec la couleur accent */
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Palette Laure Cohen - Mode Sombre */
    --aw-color-primary: rgb(180 130 110);     /* Rose saumon plus foncé mais visible */
    --aw-color-secondary: rgb(160 140 120);   /* Taupe plus clair pour contraste */
    --aw-color-accent: rgb(240 180 130);      /* Orange plus lumineux pour visibilité */

    --aw-color-text-heading: rgb(250 245 240); /* Beige très clair pour titres */
    --aw-color-text-default: rgb(230 220 210); /* Beige clair pour texte principal */
    --aw-color-text-muted: rgb(230 220 210 / 70%); /* Texte atténué */
    --aw-color-bg-page: rgb(25 20 18);        /* Brun très foncé pour arrière-plan */

    ::selection {
      background-color: rgb(240 180 130 / 35%); /* Sélection plus visible en mode sombre */
      color: rgb(250 245 240);
    }
  }
</style>
